<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
	<!-- KeyBoard item textview's style -->
	<style name="KeyBoardItemTextStyle">
	    <item name="android:gravity">center</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textSize">36sp</item>
	    <item name="android:text">X</item>
	</style>
	<style name="KeyBoardCenterItemTextStyle">
	    <item name="android:gravity">center</item>
	    <item name="android:textSize">60sp</item>
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:textColor">@drawable/keyboard_centeritem_selector</item>
	    <item name="android:text">X</item>
	</style>
	<style name="KeyBoardCenterNumTextStyle">
	    <item name="android:gravity">center_horizontal|bottom</item>
	    <item name="android:textSize">72sp</item>
	    <item name="android:background">@android:color/transparent</item>
	    <item name="android:textColor">@drawable/keyboard_centeritem_selector</item>
	    <item name="android:text">X</item>
	</style>
	<style name="KeyBoardLetterTextStyle">
	    <item name="android:gravity">center_horizontal|top</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textSize">30sp</item>
	    <item name="android:text">X</item>
	</style>
</resources>
