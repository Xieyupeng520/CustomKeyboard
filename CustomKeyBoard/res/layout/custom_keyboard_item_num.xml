<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:minHeight="@dimen/item_minHW"
    android:minWidth="@dimen/item_minHW"
    android:orientation="vertical"
    >
    <!-- first line -->
    <Button android:id="@+id/numButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/KeyBoardCenterNumTextStyle"
        android:text="9"
        android:layout_weight="2"
        />
    <!-- second line -->
    <TextView android:id="@+id/letterTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/KeyBoardLetterTextStyle"
        android:text="WXYZ"
        android:layout_weight="3"
        android:layout_marginTop="-20dp"
        />
</LinearLayout>
