<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:minHeight="@dimen/item_minHW"
    android:minWidth="@dimen/item_minHW"
    android:orientation="vertical"
    android:background="@drawable/circle_bg">
    <!-- first line -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView android:id="@+id/topTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/KeyBoardItemTextStyle"
            android:layout_weight="1"/>
    </LinearLayout>
    <!-- second line -->
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView android:id="@+id/leftTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/KeyBoardItemTextStyle"
            android:layout_weight="1"/>
        <Button android:id="@+id/centerButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/KeyBoardCenterItemTextStyle"
            android:layout_weight="1"/>
        <TextView android:id="@+id/rightTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/KeyBoardItemTextStyle"
            android:layout_weight="1"/>
    </LinearLayout>
    <!-- third line -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView android:id="@+id/bottomTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/KeyBoardItemTextStyle"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
